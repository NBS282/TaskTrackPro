@rendermode InteractiveServer
<link href="styles/styleResourceCreate.css" rel="stylesheet"/>

<div class="nav-item px-3">
    <button class="btn btn-link nav-link text-start w-100 d-flex justify-content-between align-items-center"
            @onclick="ToggleResources">
        <span>
            <i class="bi bi-box"></i> Resources
        </span>
        <i class="bi @(showResources ? "bi-chevron-down" : "bi-chevron-right")"></i>
    </button>

    @if (showResources)
    {
        <div class="ms-3">
            <NavLink class="nav-link" href="/resources/create">
                <i class="bi bi-plus-square"></i> Create Resource
            </NavLink>
            <NavLink class="nav-link" href="/resources/delete">
                <i class="bi bi-trash"></i> Delete Resource
            </NavLink>
            <NavLink class="nav-link" href="/resources/manage">
                <i class="bi bi-tools"></i> Manage Resources
            </NavLink>
        </div>
    }
</div>

@code {
    private bool showResources;

    private void ToggleResources()
    {
        showResources = !showResources;
    }

}
